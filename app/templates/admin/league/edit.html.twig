{% extends 'admin/base.html.twig' %}
{% block title %}Admin · Edit League{% endblock %}
{% block admin_body %}
<h2>Admin · Edit League</h2>
<div class="card">
  <p style="opacity:.8">{{ league.country.name }} — <strong>{{ league.name }}</strong></p>
  {{ form_start(form) }}
    {{ form_row(form.showOnHome) }}
    {{ form_row(form.homeSort) }}
    <button style="margin-top:10px;padding:6px 10px;border-radius:8px;border:1px solid #374151;background:#1f2937;color:#e6edf3">
      Save
    </button>
  {{ form_end(form) }}
</div>
<a href="{{ path('admin_league_index') }}">Back</a>
{% endblock %}
