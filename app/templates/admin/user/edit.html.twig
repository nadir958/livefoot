{% extends 'admin/base.html.twig' %}
{% block title %}Admin · {{ isNew ? 'New' : 'Edit' }} User{% endblock %}
{% block admin_body %}
<h2>Admin · {{ isNew ? 'New' : 'Edit' }} User</h2>
<div class="card">
  {{ form_start(form) }}
    {{ form_row(form.email) }}
    {{ form_row(form.roles) }}
    {{ form_row(form.plainPassword) }}
    <button style="margin-top:10px;padding:6px 10px;border-radius:8px;border:1px solid #374151;background:#1f2937;color:#e6edf3">
      Save
    </button>
  {{ form_end(form) }}
</div>
<a href="{{ path('admin_user_index') }}">Back</a>
{% endblock %}
