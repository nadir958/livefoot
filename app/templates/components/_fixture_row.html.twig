<li style="padding:.25rem 0;border-bottom:1px solid #eee;">
  <span style="color:#666;">{{ f.leagueName }}</span> —
  <strong>{{ f.homeName }}</strong> {{ f.homeGoals is not null ? f.homeGoals : '' }}
  -
  {{ f.awayGoals is not null ? f.awayGoals : '' }} <strong>{{ f.awayName }}</strong>
